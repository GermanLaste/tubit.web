---
import Layout from '../layouts/Layout.astro';
import CTA from '../components/CTA.jsx';
import Footer from '../components/Footer.astro'; // <--- 1. IMPORTAMOS EL FOOTER
import { 
  Cpu, ThermometerSun, Wrench, Zap, 
  MonitorUp, FileCode2, ShieldCheck, Download, 
  CheckCircle2, Search 
} from 'lucide-react';

// DATA: Servicios de Hardware
const hardwareServices = [
  {
    title: "Limpieza Profunda",
    desc: "Desarmado completo, eliminación de polvo con aire comprimido, limpieza de contactos y fans.",
    price: "Consultar",
    icon: Wrench
  },
  {
    title: "Mantenimiento Térmico",
    desc: "Cambio de pasta térmica (Arctic MX-4/6) en CPU y GPU para bajar temperaturas drásticamente.",
    price: "Consultar",
    icon: ThermometerSun
  },
  {
    title: "Diagnóstico de Fallas",
    desc: "Testeo de componentes con herramientas profesionales para detectar el origen exacto del problema.",
    price: "Consultar",
    icon: Search
  },
  {
    title: "Upgrade de Componentes",
    desc: "Instalación de discos SSD, más memoria RAM o cambio de placa de video. Asesoría incluida.",
    price: "Consultar",
    icon: Cpu
  }
];

// DATA: Servicios de Software
const softwareServices = [
  {
    title: "Optimización de Windows",
    desc: "Eliminación de bloatware, servicios innecesarios y configuración para máximo rendimiento.",
    price: "Consultar",
    icon: Zap
  },
  {
    title: "Instalación de Drivers",
    desc: "Actualización manual de todos los controladores a su última versión estable.",
    price: "Consultar",
    icon: Download
  },
  {
    title: "Update de BIOS",
    desc: "Actualización crítica del firmware de la motherboard para soportar nuevos procesadores.",
    price: "Consultar",
    icon: ShieldCheck
  },
  {
    title: "Programas de Trabajo",
    desc: "Instalación de Office, Adobe Suite, Autocad o lo que necesites para trabajar.",
    price: "Consultar",
    icon: MonitorUp
  }
];
---

<Layout title="Catálogo de Servicios | Tubit.PC">
  
  <header class="pt-40 pb-20 px-4 text-center bg-[#050505] relative overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[500px] bg-blue-900/20 rounded-full blur-[120px] -z-10"></div>
    <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">Nuestros Servicios</h1>
    <p class="text-slate-400 max-w-2xl mx-auto text-lg">
      Soluciones técnicas de nivel ingeniería para tu equipo y tu negocio.
    </p>
  </header>

  <section class="max-w-6xl mx-auto px-4 pb-24 space-y-24">

    <div id="hardware">
      <div class="flex items-center gap-4 mb-8 border-b border-white/10 pb-4">
        <div class="p-3 bg-blue-500/10 rounded-xl text-blue-400">
          <Cpu className="w-8 h-8" />
        </div>
        <h2 class="text-3xl font-bold text-white">Ingeniería de Hardware</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {hardwareServices.map((item) => (
          <div class="p-6 rounded-2xl bg-white/[0.03] border border-white/10 hover:border-blue-500/50 transition-colors group">
            <div class="flex justify-between items-start mb-4">
              <item.icon className="w-8 h-8 text-slate-500 group-hover:text-blue-400 transition-colors" />
              
              <span class="text-xs font-bold px-3 py-1 rounded-full bg-white/5 text-slate-400 border border-white/5">
                HARDWARE
              </span>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">{item.title}</h3>
            <p class="text-slate-400 text-sm leading-relaxed mb-4">{item.desc}</p>
            <a href="https://wa.link/ic1rvt" target="_blank" class="text-blue-400 text-sm font-semibold hover:text-blue-300 inline-flex items-center gap-1">
              Consultar precio <CheckCircle2 className="w-3 h-3" />
            </a>
          </div>
        ))}
      </div>
    </div>

    <div id="software">
      <div class="flex items-center gap-4 mb-8 border-b border-white/10 pb-4">
        <div class="p-3 bg-purple-500/10 rounded-xl text-purple-400">
          <Zap className="w-8 h-8" />
        </div>
        <h2 class="text-3xl font-bold text-white">Software & Optimización</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {softwareServices.map((item) => (
          <div class="p-6 rounded-2xl bg-white/[0.03] border border-white/10 hover:border-purple-500/50 transition-colors group">
            <div class="flex justify-between items-start mb-4">
              <item.icon className="w-8 h-8 text-slate-500 group-hover:text-purple-400 transition-colors" />
              <span class="text-xs font-bold px-3 py-1 rounded-full bg-white/5 text-slate-400 border border-white/5">
                SOFTWARE
              </span>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">{item.title}</h3>
            <p class="text-slate-400 text-sm leading-relaxed mb-4">{item.desc}</p>
            <a href="https://wa.link/ic1rvt" target="_blank" class="text-purple-400 text-sm font-semibold hover:text-purple-300 inline-flex items-center gap-1">
              Consultar precio <CheckCircle2 className="w-3 h-3" />
            </a>
          </div>
        ))}
      </div>
    </div>

    <div id="web" class="relative rounded-3xl overflow-hidden border border-white/10 bg-gradient-to-br from-blue-900/20 to-purple-900/20 p-8 md:p-12">
      <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20"></div>

      <div class="relative z-10 flex flex-col md:flex-row gap-12 items-center">
        <div class="flex-1 space-y-6">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/20 text-blue-300 text-xs font-bold border border-blue-500/30">
            <FileCode2 className="w-3 h-3" /> NUEVO SERVICIO
          </div>
          <h2 class="text-4xl font-bold text-white">Desarrollo Web & Diseño</h2>
          <p class="text-slate-300 text-lg leading-relaxed">
            Llevamos tu negocio a internet. Creamos Landing Pages modernas, rápidas y optimizadas para Google (como esta web).
          </p>
          <ul class="space-y-3 text-slate-400">
            <li class="flex items-center gap-2"><CheckCircle2 className="w-5 h-5 text-green-400" /> Diseño Responsive (Celular/PC)</li>
            <li class="flex items-center gap-2"><CheckCircle2 className="w-5 h-5 text-green-400" /> Optimización SEO incluida</li>
            <li class="flex items-center gap-2"><CheckCircle2 className="w-5 h-5 text-green-400" /> Hosting gratuito configurado</li>
          </ul>
          <div class="pt-4">
            <a href="https://wa.link/ic1rvt" class="bg-white text-black px-6 py-3 rounded-full font-bold hover:bg-slate-200 transition-colors">
              Cotizar mi página web
            </a>
          </div>
        </div>
        
        <div class="flex-1 flex justify-center">
          <div class="w-full max-w-sm bg-[#0a0a0a] border border-white/20 rounded-xl p-4 shadow-2xl rotate-3 hover:rotate-0 transition-transform duration-500">
             <div class="h-40 rounded-lg bg-gradient-to-r from-slate-800 to-slate-900 mb-4 flex items-center justify-center border border-white/5">
                <FileCode2 className="w-16 h-16 text-slate-700" />
             </div>
             <div class="h-4 w-3/4 bg-slate-800 rounded mb-2"></div>
             <div class="h-4 w-1/2 bg-slate-800 rounded"></div>
          </div>
        </div>
      </div>
    </div>

  </section>

  <CTA client:visible />
  
  <Footer />

</Layout>