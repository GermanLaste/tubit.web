---
import '../styles/global.css';
import Navbar from '../components/Navbar.jsx';

const { title } = Astro.props;
const image = "/Banner.png";
---

<!doctype html>
<html lang="es" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Servicio técnico de PC y Diseño Web en Villa Adelina" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
        <title>{title}</title>
        
        {/* ... (resto de tus meta tags igual que antes) ... */}
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content="Servicio técnico de PC y armado Gamer en Villa Adelina. Diagnóstico honesto." />
        <meta property="og:image" content={image} />

        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content="Servicio técnico de PC y armado Gamer en Villa Adelina. Diagnóstico honesto." />
        <meta property="twitter:image" content={image} />
    </head>
    
    <body class="bg-[#050505] text-white min-h-screen flex flex-col font-sans relative">
    
    <div class="fixed inset-0 z-0 bg-grid-pattern pointer-events-none"></div>
    
    <div class="fixed inset-0 z-0 pointer-events-none">
        <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-blue-900/20 blur-[120px]"></div>
        <div class="absolute bottom-[10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-purple-900/20 blur-[120px]"></div>
    </div>

    <Navbar client:load />
    
    <main class="flex-grow pt-16 relative z-10">
        <slot />
    </main>

    
</body>
</html>