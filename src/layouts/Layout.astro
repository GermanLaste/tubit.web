---
import '../styles/global.css';
import Navbar from '../components/Navbar.jsx';
import BackgroundGlow from '../components/BackgroundGlow.jsx';

const { title } = Astro.props;
const image = "/Banner.png";
---

<!doctype html>
<html lang="es" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Servicio técnico de PC y Diseño Web en Villa Adelina" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
        <title>{title}</title>
        
        {/* ... (resto de tus meta tags igual que antes) ... */}
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content="Servicio técnico de PC y armado Gamer en Villa Adelina. Diagnóstico honesto." />
        <meta property="og:image" content={image} />

        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content="Servicio técnico de PC y armado Gamer en Villa Adelina. Diagnóstico honesto." />
        <meta property="twitter:image" content={image} />
    </head>
    
    <body class="bg-[#050505] text-white min-h-screen flex flex-col font-sans selection:bg-purple-500/30">
        <Navbar client:load />
        <main class="flex-grow pt-16">
            <slot />
        </main>
        
        {/* Botón Flotante WhatsApp */}
        <a 
          href="https://wa.link/ic1rvt" 
          target="_blank" 
          class="fixed bottom-6 right-6 z-50 bg-[#25D366] text-white p-4 rounded-full shadow-[0_0_20px_rgba(37,211,102,0.5)] hover:scale-110 transition-transform flex items-center justify-center"
          aria-label="Contactar por WhatsApp"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6"><path d="M3 21l1.65-3.8a9 9 0 1 1 3.4 2.9L3 21"/><path d="M9 10a.5.5 0 0 0 1 0V9a.5.5 0 0 0-1 0v1a5 5 0 0 0 5 5h1a.5.5 0 0 0 0-1h-1a.5.5 0 0 0 0 1"/></svg>
        </a>
    </body>
</html>